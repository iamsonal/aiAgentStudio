<?xml version="1.0" encoding="UTF-8"?>
<CustomMetadata xmlns="http://soap.sforce.com/2006/04/metadata" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <label>System Prompt Leak Attempt</label>
    <protected>false</protected>
    <values>
        <field>Category__c</field>
        <value xsi:type="xsd:string">PromptLeaking</value>
    </values>
    <values>
        <field>Description__c</field>
        <value xsi:type="xsd:string">Detects attempts to extract or reveal the system prompt or initial instructions.</value>
    </values>
    <values>
        <field>IsActive__c</field>
        <value xsi:type="xsd:boolean">true</value>
    </values>
    <values>
        <field>PatternRegex__c</field>
        <value xsi:type="xsd:string">(?i)(repeat\s+(your\s+)?(system\s+)?prompt|show\s+(me\s+)?(your\s+)?instructions|what\s+(are|is)\s+your\s+(system\s+)?(prompt|instructions)|reveal\s+(your\s+)?(hidden\s+)?instructions|print\s+(your\s+)?configuration|output\s+(your\s+)?(initial\s+)?prompt)</value>
    </values>
    <values>
        <field>Priority__c</field>
        <value xsi:type="xsd:double">10.0</value>
    </values>
    <values>
        <field>Severity__c</field>
        <value xsi:type="xsd:double">0.8</value>
    </values>
</CustomMetadata>
