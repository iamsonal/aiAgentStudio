        <valueSetDefinition>
            <sorted>false</sorted>
            <value>
                <fullName>Conversational</fullName>
                <default>true</default>
                <label>Conversational</label>
            </value>
            <value>
                <fullName>Function</fullName>
                <default>false</default>
                <label>Function</label>
            </value>
            <value>
