<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>BindingType__c</fullName>
    <description>Specifies whether this binds a single Source or a Recipe (group of Sources).</description>
    <inlineHelpText>Choose &apos;Source&apos; to link one specific Context Graph Source record. Choose &apos;Recipe&apos; to link all sources sharing a Recipe Name.</inlineHelpText>
    <label>Binding Type</label>
    <required>true</required>
    <trackTrending>false</trackTrending>
    <type>Picklist</type>
    <valueSet>
        <restricted>true</restricted>
        <valueSetDefinition>
            <sorted>false</sorted>
            <value>
                <fullName>Source</fullName>
                <default>false</default>
                <label>Source</label>
            </value>
            <value>
                <fullName>Recipe</fullName>
                <default>false</default>
                <label>Recipe</label>
            </value>
        </valueSetDefinition>
    </valueSet>
</CustomField>
