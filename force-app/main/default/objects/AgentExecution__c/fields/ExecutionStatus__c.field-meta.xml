<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ExecutionStatus__c</fullName>
    <description>High-level lifecycle status of the agent execution visible to users and admins. Represents the overall execution state (Pending, Processing, Completed, Failed, etc.). Changes infrequently at major lifecycle transitions. Used for reporting, dashboards, and user-facing displays.</description>
    <inlineHelpText>Overall execution lifecycle status. Shows whether this execution is pending, actively processing, completed, failed, or in another major state. This is the primary status field for monitoring execution progress.</inlineHelpText>
    <label>Execution Status</label>
    <required>true</required>
    <trackHistory>true</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Picklist</type>
    <valueSet>
        <restricted>true</restricted>
        <valueSetDefinition>
            <sorted>false</sorted>
            <value>
                <fullName>Pending</fullName>
                <default>true</default>
                <label>Pending</label>
            </value>
            <value>
                <fullName>Processing</fullName>
                <default>false</default>
                <label>Processing</label>
            </value>
            <value>
                <fullName>Awaiting Action</fullName>
                <default>false</default>
                <label>Awaiting Action</label>
            </value>
            <value>
                <fullName>Completed</fullName>
                <default>false</default>
                <label>Completed</label>
            </value>
            <value>
                <fullName>Failed</fullName>
                <default>false</default>
                <label>Failed</label>
            </value>
            <value>
                <fullName>Paused</fullName>
                <default>false</default>
                <label>Paused</label>
            </value>
            <value>
                <fullName>Cancelled</fullName>
                <default>false</default>
                <label>Cancelled</label>
            </value>
        </valueSetDefinition>
    </valueSet>
</CustomField>
